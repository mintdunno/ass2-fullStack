<!-- Header for vendor -->
<%- include('./partials/vendor-head') %>


    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Profile /</span> Account
        </h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <h5 class="card-header">Bussiness Details</h5>
                    <!-- Account -->
                    <div class="card-body">
                        <div class="row">
                            <!-- User avatar is here -->
                            <div class="col-md-3 text-center">
                                <img src="data:image/<%= vendor?.profilePicture.contentType %>;base64,<%= vendor?.profilePicture.data.toString('base64') %>"
                                    alt="user-avatar" class="img-thumbnail" id="uploadedAvatar">
                                <label for="upload" class="btn btn-dark mt-2">
                                    <span class="d-none d-sm-block">Upload new Logo</span>
                                    <i class="bx bx-upload d-block d-sm-none"></i>
                                    <input type="file" id="upload" class="account-file-input" hidden=""
                                        accept="image/png, image/jpeg">
                                </label>
                                <button type="button" class="btn btn-outline-secondary mt-2 account-image-reset">
                                    <i class="bx bx-reset d-block d-sm-none"></i>
                                    <span class="d-none d-sm-block">Reset</span>
                                </button>
                                <p class="text-muted mt-2">Allowed JPG or PNG.</p>
                            </div>
                            <div class="col-md-9">
                                <form id="formAccountSettings" method="POST" action="/vendor/profile/<%= vendor.id  %>">
                                    <div class="row">
                                        <!-- Username -->
                                        <div class="mb-3 col-md-6">
                                            <label for="username" class="form-label">User Name</label>
                                            <input type="text" class="form-control" id="username" name="username"
                                                value="<%= vendor?.username %>" disabled>
                                        </div>
                                        <!-- Bussiness name -->
                                        <div class="mb-3 col-md-6">
                                            <label for="bName" class="form-label">Business Name</label>
                                            <input class="form-control" type="text" id="bName" name="bName"
                                                value="<%= vendor?.bName %>" autofocus="">
                                        </div>
                                        <!-- Vendor email -->
                                        <div class="mb-3 col-md-6">
                                            <label for="email" class="form-label">E-mail</label>
                                            <input class="form-control" type="text" id="email" name="email"
                                                value="<%= vendor?.email %>">
                                        </div>
                                        <!-- Vendor's phone -->
                                        <div class="mb-3 col-md-6">
                                            <label class="form-label" for="phoneNumber">Phone Number</label>
                                            <div class="input-group input-group-merge">
                                                <input type="text" id="phoneNumber" name="phoneNumber"
                                                    class="form-control" value="<%= vendor?.phone %>">
                                            </div>
                                        </div>
                                        <div class="mb-3 col-md-6">
                                            <label for="address" class="form-label">Business Address</label>
                                            <input type="text" class="form-control" id="address" name="address"
                                                value="<%= vendor?.address %>">
                                        </div>
                                    </div>
                                    <div class="text-center mt-3">
                                        <button type="reset" class="btn btn-outline-secondary me-2">Cancel</button>
                                        <button type="submit" class="btn btn-dark">Save changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Account -->
            </div>
        </div>
    </div>
    <footer class="py-3 mt-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            <li class="nav-item"><a href="privacy.html" class="nav-link px-2 text-body-secondary">Privacy Policy</a>
            </li>
            <li class="nav-item"><a href="operatingregulations.html" class="nav-link px-2 text-body-secondary">Operating
                    Regulations</a>
            </li>
            <li class="nav-item"><a href="shipping.html" class="nav-link px-2 text-body-secondary">Shipping
                    Policy</a>
            </li>
            <li class="nav-item"><a href="returnandrefund.html" class="nav-link px-2 text-body-secondary">Return and
                    Refund
                    Policy</a></li>
        </ul>
        <p class="text-center text-body-secondary">Â© 2023 TheCornerStore</p>
    </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
    <script src="myaccount.js"></script>
    </body>

    </html>