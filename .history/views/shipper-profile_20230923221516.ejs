<!-- Header section -->
<%- include('./partials/shipper-head') %>

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Profile</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Account</li>
                </ol>
            </nav>
        </h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <h5 class="card-header">Profile Details</h5>
                    <!-- Account -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 text-center">
                                <form id="formAccountSettings" method="POST"
                                    action="/customer/profile/<%= shipper._id %>" enctype="multipart/form-data">
                                    <img src="data:image/<%= shipper?.profilePicture.contentType %>;base64,<%= shipper?.profilePicture.data.toString('base64') %>"
                                        alt="user-avatar" class="img-thumbnail" id="uploadedAvatar">
                                    <label for="upload" class="btn btn-dark mt-2">
                                        <span class="d-none d-sm-block">Upload new photo</span>
                                        <i class="bx bx-upload d-block d-sm-none"></i>
                                        <input type="file" id="upload" class="account-file-input" hidden=""
                                            accept="image/png, image/jpeg" name="profilePicture">
                                    </label>
                                    <button type="button" class="btn btn-outline-secondary mt-2 account-image-reset">
                                        <i class="bx bx-reset d-block d-sm-none"></i>
                                        <span class="d-none d-sm-block">Reset</span>
                                    </button>
                                    <p class="text-muted mt-2">Allowed JPG or PNG.</p>
                            </div>
                            <div class="col-md-9">

                                <div class="row">
                                    <div class="mb-3 col-md-6">
                                        <label for="user-name" class="form-label">User Name</label>
                                        <input type="text" class="form-control" id="user-name" name="user-name"
                                            value="<%= shipper?.username %>" disabled>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label for="name" class="form-label">Name</label>
                                        <input class="form-control" type="text" id="name" name="name"
                                            value="<%= shipper?.fullname %>" autofocus="">
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label for="email" class="form-label">E-mail</label>
                                        <input class="form-control" type="text" id="email" name="email"
                                            value="<%= shipper?.email %>">
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label class="form-label" for="phoneNumber">Phone Number</label>
                                        <div class="input-group input-group-merge">
                                            <input type="text" id="phoneNumber" name="phoneNumber" class="form-control"
                                                value="<%= shipper?.phone %>">
                                        </div>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label for="service-area" class="form-label">Distribution hub</label>
                                        <select class="form-select form-select" aria-label="Small select example">
                                            <option disabled selected>--Select a distribution hub--</option>
                                            <option value="hcmcity">Ho Chi Minh City</option>
                                            <option value="danang">Da Nang</option>
                                            <option value="hanoi">Ha Noi</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="text-center mt-3">
                                    <button type="reset" class="btn btn-outline-secondary me-2">Cancel</button>
                                    <button type="submit" class="btn btn-dark">Save changes</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Account -->
            </div>
        </div>
    </div>


    <!-- Footer section -->
    <%- include('./partials/shipper-footer') %>