<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vender Page</title>
    <!-- Boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/vendor.css" />
</head>

<body>
    <!-- Header Section Is Here just for vender -->
    <div class="container-fluid">
        <header class="pb-4 bg-body-secondary">
            <div class="container-fluid d-flex flex-wrap justify-content-evenly gap-5">
                <div class="">
                    <!-- Logo is hear -->
                    <!-- Link back to vender page -->
                    <a href="/vendor/homepage/<%= vendor?.id %>"
                        class="d-flex align-items-center col-lg-4 mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                        <img loading="lazy" width="250px" src="/img/logo.svg" alt="Logo" />
                    </a>
                </div>
        </header>


        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4">
                <span class="text-muted fw-light">Profile /</span> Account
            </h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-4">
                        <h5 class="card-header">Bussiness Details</h5>
                        <!-- Account -->
                        <div class="card-body">
                            <div class="row">
                                <!-- User avatar is here -->
                                <div class="col-md-3 text-center">
                                    <form id="formAccountSettings" method="POST"
                                        action="/vendor/profile/<%= vendor?.id %>" enctype="multipart/form-data"
                                        onsubmit="alert('Vendor Information Changed');">
                                        <img src="data:image/<%= vendor?.profilePicture.contentType %>;base64,<%= vendor?.profilePicture.data.toString('base64') %>"
                                            alt="user-avatar" class="img-thumbnail" id="uploadedAvatar">
                                        <label for="upload" class="btn btn-dark mt-2">
                                            <span class="d-none d-sm-block">Upload new photo</span>
                                            <i class="bx bx-upload d-block d-sm-none"></i>
                                            <input type="file" id="upload" class="account-file-input"
                                                name="profilePicture" hidden accept="image/png, image/jpeg">
                                        </label>
                                        <button type="button"
                                            class="btn btn-outline-secondary mt-2 account-image-reset">
                                            <i class="bx bx-reset d-block d-sm-none"></i>
                                            <span class="d-none d-sm-block">Reset</span>
                                        </button>
                                        <p class="text-muted mt-2">Allowed JPG or PNG.</p>
                                </div>
                                <div class="col-md-9">

                                    <div class=" row">
                                        <!-- Username -->
                                        <div class="mb-3 col-md-6">
                                            <label for="username" class="form-label">User Name</label>
                                            <input type="text" class="form-control" id="username" name="username"
                                                value="<%= vendor?.username %>" disabled>
                                        </div>
                                        <!-- Bussiness name -->
                                        <div class="mb-3 col-md-6">
                                            <label for="bName" class="form-label">Business Name</label>
                                            <input class="form-control" type="text" id="bName" name="bName"
                                                value="<%= vendor?.bName %>" autofocus="">
                                        </div>
                                        <!-- Vendor email -->
                                        <div class="mb-3 col-md-6">
                                            <label for="email" class="form-label">E-mail</label>
                                            <input class="form-control" type="email" id="email" name="email"
                                                value="<%= vendor?.email %>">
                                        </div>
                                        <!-- Vendor's phone -->
                                        <div class="mb-3 col-md-6">
                                            <label class="form-label" for="phoneNumber">Phone Number</label>
                                            <div class="input-group input-group-merge">
                                                <input type="number" id="phone" name="phone" class="form-control"
                                                    value="<%= vendor?.phone %>">
                                            </div>
                                        </div>
                                        <div class="mb-3 col-md-6">
                                            <label for="address" class="form-label">Business Address</label>
                                            <input type="text" class="form-control" id="address" name="address"
                                                value="<%= vendor?.address %>">
                                        </div>
                                    </div>
                                    <div class="text-center mt-3">
                                        <button type="reset" class="btn btn-outline-secondary me-2">Cancel</button>
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal">
                                            Update
                                        </button>
                                        <div class="modal fade" id="exampleModal" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Update
                                                            Product informtion:</h1>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Please make sure your Product information
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-primary">Update</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Account -->
                </div>
            </div>
        </div>
        <!-- Footer Section is hear -->
        <%- include('./partials/vendor-footer') %>
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    const uploadInput = document.getElementById("upload");
                    const uploadedAvatar = document.getElementById("uploadedAvatar");
                    const imageResetButton = document.querySelector(".account-image-reset");

                    // Add an event listener to the file input
                    uploadInput.addEventListener("change", function (e) {
                        const file = e.target.files[0];

                        if (file) {
                            // Create a FileReader to read the selected file
                            const reader = new FileReader();

                            reader.onload = function (e) {
                                // Update the image source with the selected file
                                uploadedAvatar.src = e.target.result;
                            };

                            // Read the file as a data URL
                            reader.readAsDataURL(file);
                        }
                    });

                    // Add an event listener to the reset button
                    imageResetButton.addEventListener("click", function () {
                        // Reset the image source to its original state (e.g., a default image)
                        uploadedAvatar.src = "path/to/default/image.png"; // Replace with the default image URL
                        // Clear the file input value to allow reselection of the same file
                        uploadInput.value = "";
                    });
                });
            </script>
</body>


</html>