<%- include('./partials/register-head') %>

    <body>
        <div class="container-fluid col-lg-8 text-center">
            <main class="w-100 m-auto">
                <form action="/register/shipper" method="post" id="form" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <div class="col-md-6 text-center" id="logo">
                            <a href="/register/shipper"><img class="mb-2 text-center" src="/img/logo.svg" alt=""
                                    width="300px"></a>
                        </div>
                        <div class="col-md-6 d-flex align-items-center justify-content-center">
                            <h1 class="h3 mb-3 fw-normal">Shipper Registation</h1>
                        </div>
                    </div>
                    <div class="card text-center">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs">
                                <!-- Customer res -->
                                <li class="nav-item">
                                    <a class="nav-link" aria-current="true" aria-disabled="true"
                                        href="/register/customer">Customer</a>
                                </li>
                                <!-- Shipper res -->
                                <li class="nav-item">
                                    <a class="nav-link active">Shipper</a>
                                </li>
                                <!-- Vendor res -->
                                <li class="nav-item">
                                    <a class="nav-link" aria-disabled="true" href="/register/vendor">Vendor</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <!-- Full Name -->
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="fullname" name="fullname"
                                    placeholder="fullname" required="">
                                <label for="firstname">Full Name</label>
                            </div>


                            <!-- Email -->
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email"
                                    required>
                                <label for="email">Email</label>
                            </div>
                            <!-- Email -->

                            <!-- Phone -->
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="phone" name="phone" placeholder="phone"
                                    required>
                                <label for="phone">Phone Number</label>
                            </div>
                            <!-- Phone -->

                            <!-- Username Section -->
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="username" name="username"
                                    placeholder="Username" required="">
                                <label for="username">Username</label>
                            </div>
                            <!-- Username Section -->

                            <!-- Password Section -->
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Password" required="">
                                <label for="password">Password</label>
                            </div>
                            <!-- Password Section -->

                            <!-- Distribution hub selection aka location -->
                            <div class="form-floating mb-3">
                                <select class="form-select" required="" id="location" name="location"
                                    aria-label="Floating label select example">
                                    <option value="" disabled selected>-Choose a distribution hub-</option>
                                    <option value="Ho Chi Minh">Ho Chi Minh</option>
                                    <option value="Da Nang">Da Nang</option>
                                    <option value="Ha Noi">Ha Noi</option>
                                </select>
                                <label for="location">Distribution hub</label>
                            </div>
                            <!-- Role selection -->

                            <!--Picture setup-->
                            <div class="image-preview-container">
                                <div class="preview">
                                    <img id="preview-selected-image">
                                </div>
                                <label for="file">Upload Image</label>
                                <input type="file" id="file" name="profilePicture" accept="image/*" required
                                    onchange="previewImage(event);" />
                            </div>


                            <!-- checkbox -->
                            <div class="form-check ">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" required>
                                <label class="form-check-label d-flex" for="flexCheckDefault">
                                    I have read and agree to the terms and conditions
                                </label>
                            </div>
                            <!-- checkbox -->

                            <!-- Display Error -->
                            <div id="error" style="color: red !important;"></div>
                            <div><%- include('./partials/errorMsg.ejs') %></div>

                            <!-- Submit section -->
                            <button class="btn btn-dark w-100 my-4 py-2" type="submit">Sign Up</button>
                            <!-- Submit section -->

                            <p>Already have an account? <a href="/">Log In</a></p>
                        </div>
                    </div>
                </form>
            </main>
        </div>
        <footer class="py-3 mt-4">
            <p class="text-center text-body-secondary">© 2023 TheCornerStore</p>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
    </body>

    </html>